<cate-wrap>
    <cate-head class="shadow">
        <i class="fas fa-calendar-plus fa-fw"></i>
        Đăng ký lịch
    </cate-head>

    <div id="cal-register-wrapper">

    </div>

</cate-wrap>

<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true"
    id="saveCalendar-modal">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                        aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Confirmar</h4>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" id="modal-btn-yes">Si</button>
                <button type="button" class="btn btn-primary" id="modal-btn-no">No</button>
            </div>
        </div>
    </div>
</div>

<script type="text/babel" src="/public/javascripts/react/calendar-register.js"></script>
<script type="text/babel">
    ReactDOM.render(<CalendarRegister store='<%- user.store.id %>' user='<%- user.id %>'/>, 
        document.getElementById('cal-register-wrapper'));
</script>