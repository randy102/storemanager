<script src="/public/javascripts/jquery-3.1.1.min.js"></script>
<script src="/public/javascripts/popper.min.js"></script>
<script src="/public/javascripts/bootstrap.min.js"></script>
<script src="/public/javascripts/bootstrap-clockpicker.js"></script>
<script src="/public/javascripts/moment.js"></script>
