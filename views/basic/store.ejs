<!--Store List-->
<cate-wrap>
    <cate-head>
        <i class="fas fa-store fa-fw"></i>
        Cửa hàng
    </cate-head>

    <div class="store-wrap">
        <% if(storeList){ %>
        <% storeList.forEach(store => { %>
        <div class="store-item shadow">
            <img src="/public/images/background/<%- store.background %>" alt="">
            <div class="store-brand">
                [<%- store.brand %>] <br/> <%- store.name %>
            </div>
            <div class="store-mems">
                10 thành viên
            </div>
            <a href="#" class="rounded-pill store-btn btn btn-danger">Rời khỏi</a>
        </div>
        <%}); %>

        <% } else {%>
        <h3 class="text-center ml-auto mr-auto">Bạn chưa gia nhập cửa hàng nào!</h3>
        <% } %>
    </div>
</cate-wrap>
<!--/Store List-->

<hr />

<!--Search Store-->
<cate-wrap id="store-search">

</cate-wrap>
<!--/Search Store-->

<hr />

<!--Create Store-->
<cate-wrap>
    <cate-head>
        <i class="fas fa-plus fa-fw"></i>
        Tạo cửa hàng
    </cate-head>
    <div class="manage-fields">
        <form action="/post/store/create" method="post">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Thương hiệu</span>
                </div>
                <input class="form-control" type="text" name="brand" placeholder="Ví dụ: The Coffee House, Passio...">
            </div>

            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Tên viết tắt CH</span>
                </div>
                <input maxlength="10" class="form-control" type="text" name="name"
                    placeholder="Ví dụ: 197 NT... (Tối đa 10 ký tự)">
            </div>

            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Địa chỉ CH</span>
                </div>
                <input class="form-control" type="text" name="address">
            </div>

            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Thể loại</span>
                </div>
                <select class="custom-select" name="type">
                    <option value="Coffee Shop,coffee">Coffee Shop</option>
                    <option value="Pizza Shop,pizza-slice">Pizza Shop</option>
                    <option value="Fast Food Restaurant,hamburger">Fast Food Restaurant</option>
                    <option value="Milk & Tea Shop,cocktail">Milk & Tea Shop</option>
                    <option value="Clothing Shop,tshirt">Clothing Shop</option>
                </select>
            </div>

            <div class="manage-btn">
                <button type="submit" class="btn btn-outline-success rounded-pill">
                    <i class="fas fa-check fa-fw"></i>
                    Tạo
                </button>
            </div>
        </form>


    </div>
</cate-wrap>
<!--Create Store-->

<!--Store Apply Modal Success-->
<div class="modal fade" id="storeApplyModalS" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="text-center mb-2 text-success" style="font-size:80px">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="text-center text-success" style="font-size:20px">Xin gia nhập thành công!</div>
            </div>
        </div>
    </div>
</div>

<!--Store Apply Modal failed-->
<div class="modal fade" id="storeApplyModalF" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                    <div class="text-center mb-2 text-danger" style="font-size:80px">
                        <i class="fas fa-times-circle"></i>
                    </div>
                    <div class="text-center text-danger" style="font-size:20px">Bạn đã gia nhập cửa hàng này!</div>
                </div>
        </div>
    </div>
</div>

<script type="text/babel" src="/public/javascripts/react/store.js"></script>