<div class="login-wrap shadow">
    <div class="login-brand">
        <img src="/public/images/logo.png">
    </div>
    <div class="login-form">
        <form action="/post/login" method="post">
            <div class="form-group">
                <label><i class="fas fa-at fa-fw"></i> Email</label>
                <input class="form-control" type="text" name="email" placeholder="Nhập email...">
            </div>

            <div class="form-group">
                <label><i class="fas fa-key fa-fw"></i> Mật khẩu</label>
                <input class="form-control" type="password" name="password" placeholder="Mật khẩu...">
            </div>

            <button type="submit" class="btn btn-outline-success rounded-pill mr-2">Đăng nhập</button>
            <a href="/register" class="btn btn-outline-danger rounded-pill">Đăng ký</a>
            <div class="login-forgot">
                <a href="/passwordforgot">Quên mật khẩu?</a>
            </div>

            <div class="text-danger"><%-error%></div>

        </form>
    </div>
</div>